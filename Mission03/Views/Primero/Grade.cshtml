@{
    ViewData["Title"] = "Calculate Your Final Grade";

}

@model GradeModel

<!-- Inputs for each grade type -->
<h2>Calculate Your Overall Percentage:</h2>
<form method="post">
    
    <label>Assignments:</label>
    <input id="asgmts" asp-for="asgmts" /><br />
    <label>Group Project:</label>
    <input id="gp" asp-for="gp" /><br />
    <label>Quizzes:</label>
    <input id="qz" asp-for="qz" /><br />
    <label>Exams:</label>
    <input id="exm" asp-for="exm" /><br />
    <label>INTEX:</label>
    <input id="ix" asp-for="ix" /><br />

    <div asp-validation-summary="All"></div>
    <input id="calc" type="submit" value="Calculate Percentage" />
</form>

<!-- Where the final numeric and letter grade will be displayed -->
<h2 id="fg"></h2>

<script src="~/js/logic.js"></script>